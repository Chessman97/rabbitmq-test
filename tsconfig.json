        "src/**/*"
    ],
    "compilerOptions": {
        "outDir": "build",
        "target": "es6",
        "module": "commonjs",
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "allowJs": true,
        "moduleResolution": "node"
    }
